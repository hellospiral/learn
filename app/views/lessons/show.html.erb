<h1><%= @lesson.name %></h1>
<h3><%= @lesson.content %></h3>

<p><%= link_to "Edit", edit_lesson_path(@lesson) %></p>
<p><%= link_to "Delete", lesson_path(@lesson),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<% @lessons.each do |lesson| %>
  <% if lesson.number === @lesson.number + 1 %>
    <%= link_to "Next Lesson", lesson_path(lesson) %>
  <% elsif lesson.number === @lesson.number - 1 %>
    <%= link_to "Previous Lesson", lesson_path(lesson) %>
  <% end %>
<% end %>
<p><%= link_to "Return to lessons", lessons_path %></p>
