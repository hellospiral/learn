<h1>Sections</h1>

<%= select_tag 'section_id', options_from_collection_for_select(@sections, "id", "name"),:onchange => "window.location.replace('/sections/'+this.value);" %>

<hr>

<ul class="list-group">
  <% @sections.each do |section| %>
    <li class="list-group-item"><%= link_to section.name, section_path(section) %></li>
  <% end %>
</ul>

<%= link_to "Add a section", new_section_path %>
